<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecoverActivity">

    <EditText
        android:id="@+id/cardNumText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Номер карты"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cvcText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="CVC"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="@+id/cardNumText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardDateText"
        app:layout_constraintTop_toBottomOf="@+id/cardNumText" />

    <EditText
        android:id="@+id/cardDateText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="ММ/ГГ"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/cardNumText"
        app:layout_constraintTop_toBottomOf="@+id/cardNumText" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Подтвердить"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/cardNumText"
        app:layout_constraintStart_toStartOf="@+id/cardNumText"
        app:layout_constraintTop_toBottomOf="@+id/cardNumText" />

    <TextView
        android:id="@+id/resendSMSText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Оптравить смс повторно"
        app:layout_constraintEnd_toEndOf="@+id/acceptButton"
        app:layout_constraintStart_toStartOf="@+id/acceptButton"
        app:layout_constraintTop_toBottomOf="@+id/acceptButton" />

</androidx.constraintlayout.widget.ConstraintLayout>